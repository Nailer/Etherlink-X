    "ts-jest": "^29.1.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "util": "^0.12.5",
    "vite": "^7.0.4",
    "vite-tsconfig-paths": "^4.3.2"
  }
