    "@types/react-dom": "^18.2.0",
    "@types/react-test-renderer": "^18.0.8",
    "@vitejs/plugin-react": "^4.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.0",
    "globals": "^16.3.0",
